# Persona AI Assistant Environment Configuration
# Copy this file and rename to .env, then update with your actual values

# OpenRouter API Configuration
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
DEFAULT_MODEL=deepseek/deepseek-r1-0528:free

# Backend API Configuration
BACKEND_BASE_URL=http://localhost:3000
NODE_ENV=development

# App Configuration
APP_NAME=Persona AI Assistant
APP_VERSION=1.0.0
APP_DOMAIN=https://persona-ai.app

# Storage Keys
USER_PROFILE_KEY=user_profile
CHAT_HISTORY_KEY=chat_history
MOOD_DATA_KEY=mood_data
PSYCHOLOGY_TESTS_KEY=psychology_tests
PERSONALITY_DATA_KEY=personality_data
SETTINGS_KEY=settings

# Little Brain Configuration
MEMORIES_KEY=memories
PERSONALITY_MODEL_KEY=personality_model
EMOTIONAL_STATE_KEY=emotional_state

# AI Model Configuration
PERSONALITY_ANALYSIS_MODEL=deepseek/deepseek-r1-0528:free

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_BIOMETRIC_AUTH=true
ENABLE_CRISIS_INTERVENTION=true
ENABLE_BACKGROUND_SYNC=false

# Security Configuration (Backend)
JWT_SECRET=your-jwt-secret-key-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here
DATABASE_URL=postgresql://username:password@localhost:5432/persona_db

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100